<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/toolbar" />
        </LinearLayout>

        <View
            android:id="@+id/main_first_boundary"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_below="@id/main_linear"/>

        <RelativeLayout
            android:id="@+id/main_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_first_boundary"
            android:background="#FFFFFF"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/ticketing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예매"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/theater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/ticketing"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/ticketing"
                    android:text="영화관"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lotte_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/ticketing"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/theater"
                    android:text="롯시몰"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/ticketing"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/lotte_market"
                    android:text="VOD"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/ticketing"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/vod"
                    android:text="게임"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_category_layout">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/main_poster_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/main_left_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/menu_drawer" />

    <android.support.design.widget.NavigationView
        android:id="@+id/main_right_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/menu_drawer" />


</android.support.v4.widget.DrawerLayout>
